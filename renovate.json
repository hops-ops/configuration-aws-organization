{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "crossplane": {
    "fileMatch": ["\\.yaml$", "\\.yaml\\.gotmpl$"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["apis/**/configuration.yaml"],
      "matchStrings": [
        "-\\s*configuration:\\s*ghcr\\.io/hops-ops/(?<depName>.*?)\\s*version:\\s*\">=(?<currentValue>.*?)\"\\s*"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "hops-ops/{{depName}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["apis/**/configuration.yaml", "upbound.yaml"],
      "matchStrings": [
        "-\\s*(provider|function|package):\\s*(?<registryUrl>[^/]+)/(?<depName>[^\\s]+)\\s*version:\\s*\">=(?<currentValue>.*?)\"\\s*"
      ],
      "datasourceTemplate": "docker",
      "registryUrlTemplate": "https://{{registryUrl}}"
    }
  ]
}
